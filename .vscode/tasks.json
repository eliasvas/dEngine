{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: gcc build active file",
			"command": "/usr/bin/gcc",
			"args": [
				"-fdiagnostics-color=always",
				"-g",
				"src/main.c",
				"src/dcore.c",
				"src/dthread.c",
				"src/dfiber.c",
				"${workspaceFolder}/build/fiber_context.o",
				"-pthread",
				"-Iext/SDL2/include/",
				"-Lbuild/",
				"-lSDL2",
				"-o",
				"build/engine"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "compiler: /usr/bin/gcc"
		}
	]
}